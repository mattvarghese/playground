{
  "name": "matt-varghese-minimal-typescript-react-template",
  "displayName": "Matt Varghese's Minimal TypeScript React Project Template",
  "contributors": [
    "Matt | Varghese Mathew"
  ],
  "version": "1.0.0",
  "description": "Matt Varghese's Minimal TypeScript React Project Template",
  "main": "index.tsx",
  "scripts": {
    "test": "npm run build && jest --passWithNoTests",
    "start": "npm install && webpack serve --mode development --hot --open",
    "build": "npm install && webpack --config webpack.config.js --mode production",
    "lint": "npm run build && eslint \"src/**/*.{ts,tsx}\"",
    "serve": "npm run build && serve -s dist",
    "clean": "npm install -D typescript && npx --package typescript tsc clean-all.ts && node clean-all.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d ./dist"
  },
  "author": "Matt | Varghese Mathew",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.2.0",
    "gh-pages": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest-environment-jsdom": "^29.4.3",
    "node-sass": "^8.0.0",
    "sass-loader": "^13.2.1",
    "serve": "^14.2.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
